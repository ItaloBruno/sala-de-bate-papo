<InterfaceServidor>:
    id: tela_servidor
    orientation: 'vertical'

    BoxLayout:
        id: grid_usuarios
        orientation: 'horizontal'
       
        BoxLayout:
            id: box_usuarios
            orientation: 'vertical'

            Label:
                id: label_usuarios
                text: 'Lista de usuários'
                font_size: 20

            ScrollView:
                id: scroll_usuarios

                BoxLayout:
                    id: lista_usuarios
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

                    Label:
                        id: usuario_1
                        text: 'teste 1'
                        font_size: 20
                        size_hint_y: None
                        height: 100
                    Label:
                        id: usuario_2
                        text: 'teste 2'
                        font_size: 20
                        size_hint_y: None
                        height: 100

                    Label:
                        id: usuario_3
                        text: 'teste 3'
                        font_size: 20
                        size_hint_y: None
                        height: 100

                    Label:
                        id: usuario_4
                        text: 'teste 4'
                        font_size: 20
                        size_hint_y: None
                        height: 100

        BoxLayout:
            id: grid_adicionar_remover_usuarios
            orientation: 'vertical'

            BoxLayout:
                id: adicionar_usuario
                orientation: 'horizontal'
                
                TextInput:
                    id: adicionar_usuario
                    text: 'Digite o nome do usuário a ser adicionado...'
                    font_size: 15

                Button:
                    id: botao_adicionar_usuario
                    text: 'Adicionar usuário'
                    font_size: 15

            BoxLayout:
                id: remover_usuario
                orientation: 'horizontal'
                        
                TextInput:
                    id: remover_usuario
                    text: 'Digite o nome do usuário a ser removido...'
                    font_size: 15

                Button:
                    id: botao_remover_usuario
                    text: 'Remover usuário'
                    font_size: 15

    BoxLayout:
        id: grid_topicos
        orientation: 'horizontal'
       
        BoxLayout:
            id: box_usuarios
            orientation: 'vertical'

            Label:
                id: label_topicos
                text: 'Lista de tópicos'
                font_size: 20

            ScrollView:
                id: scroll_topicos

                BoxLayout:
                    id: lista_topicos
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

                    Label:
                        id: topico_1
                        text: 'nba'
                        font_size: 20
                        size_hint_y: None
                        height: 100

                    Label:
                        id: topico_2
                        text: 'nfl'
                        font_size: 20
                        size_hint_y: None
                        height: 100

                    Label:
                        id: topico_3
                        text: 'nbb'
                        font_size: 20
                        size_hint_y: None
                        height: 100

                    Label:
                        id: topico_4
                        text: 'mlb'
                        font_size: 20
                        size_hint_y: None
                        height: 100
        BoxLayout:
            id: grid_adicionar_remover_topicos
            orientation: 'vertical'

            BoxLayout:
                id: grid_adicionar_topico
                orientation: 'horizontal'
                
                TextInput:
                    id: adicionar_topico
                    text: 'Digite o nome do tópico a ser adicionado...'
                    font_size: 15

                Button:
                    id: botao_adicionar_topico
                    text: 'Adicionar tópico'
                    font_size: 15

            BoxLayout:
                id: grid_remover_topico
                orientation: 'horizontal'
                        
                TextInput:
                    id: remover_topico
                    text: 'Digite o nome do tópico a ser removido...'
                    font_size: 15

                Button:
                    id: botao_remover_topico
                    text: 'Remover tópico'
                    font_size: 15
