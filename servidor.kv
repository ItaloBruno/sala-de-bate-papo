<Interface>:
    id: tela_servidor
    orientation: 'vertical'

    BoxLayout:
        id: grid_usuarios
        orientation: 'horizontal'

        BoxLayout:
            id: box_usuarios
            orientation: 'vertical'

			BoxLayout:
                id: box_label_usuario
                orientation: 'horizontal'

                Label:
                    id: label_usuarios
                    text: 'Lista de usuários'
                    font_size: 20

                Button:
                    text: "atualizar"
                    size_hint_x: None
                    width: 100
                    on_release: app.atualizar_listas_usuarios(root.ids.lista_usuarios)

            ScrollView:
                id: scroll_usuarios

                BoxLayout:
                    id: lista_usuarios
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            id: grid_adicionar_remover_usuarios
            orientation: 'vertical'

            BoxLayout:
                id: adicionar_usuario
                orientation: 'horizontal'

                TextInput:
                    id: adicionar_usuario
                    text: 'Digite o nome do usuário a ser adicionado...'
                    font_size: 15

                Button:
                    id: botao_adicionar_usuario
                    text: 'Adicionar usuário'
                    font_size: 15
                    on_release: app.adicionar_novo_usuario(root.ids.lista_usuarios, root.ids.adicionar_usuario.text)

    BoxLayout:
        id: grid_topicos
        orientation: 'horizontal'

        BoxLayout:
            id: box_topicos
            orientation: 'vertical'

            Label:
                id: label_topicos
                text: 'Lista de tópicos'
                font_size: 20

            ScrollView:
                id: scroll_topicos

                BoxLayout:
                    id: lista_topicos
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            id: grid_adicionar_remover_topicos
            orientation: 'vertical'

            BoxLayout:
                id: grid_adicionar_topico
                orientation: 'horizontal'

                TextInput:
                    id: adicionar_topico
                    text: 'Digite o nome do tópico a ser adicionado...'
                    font_size: 15

                Button:
                    id: botao_adicionar_topico
                    text: 'Adicionar tópico'
                    font_size: 15
                    on_release: app.adicionar_novo_topico(root.ids.lista_topicos, root.ids.adicionar_topico.text)

<Usuario>
    size_hint_y: None
    height: 100
    font_size: 20

    Label:
        id: usuario

    Button:
        text: "remover"
        size_hint_x: None
        width: 100
        on_release: app.remover_usuario(app.root.ids.lista_usuarios, root)

<Topico>
    size_hint_y: None
    height: 100
    font_size: 20

    Label:
        id: topico

    Button:
        text: "remover"
        size_hint_x: None
        width: 100
        on_release: app.remover_topico(app.root.ids.lista_topicos, root)
